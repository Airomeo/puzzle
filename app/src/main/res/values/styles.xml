<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Application theme. 自定义style，无状态栏标题栏-->
    <style name="AppTheme.NoBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
        <!--设置状态栏半透明-->
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
        <!--设置状态栏颜色为全透明，此方法如果与上述语句同时使用不起效-->
        <!--<item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>-->

        <!--设置导航栏半透明-->
        <!--<item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>-->
        <!--设置导航栏颜色为全透明，此方法如果与上述语句同时使用不起效-->
        <!--<item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>-->
        <!--适应窗口界面大小，给导航栏、状态栏腾出相应大小的空间-->
        <!--<item name="android:fitsSystemWindows">true</item>-->


    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
